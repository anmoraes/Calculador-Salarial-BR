<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </Space>

    <TextView
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nome da Simulação"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textStyle="bold" />


     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_gravity="center_horizontal">


         <TextView

             android:id="@+id/edtSalarioB"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="Salario Bruto"
             android:textColor="@color/black"
             android:layout_weight="4"/>


         <TextView

             android:id="@+id/txtValorINSS"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="Valor INSS"
             android:textColor="@color/black"
             android:layout_weight="1"/>

         <TextView

             android:id="@+id/txtValorIRPF"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="Valor IFPF"
             android:textColor="@color/black"
             android:layout_weight="1"/>

         <TextView

             android:id="@+id/txtPensao"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="Desconto de Pensão"
             android:textColor="@color/black"
             android:layout_weight="1"/>

         <TextView

             android:id="@+id/txtOutros"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="Outros Descontos"
             android:textColor="@color/black"
             android:layout_weight="1"/>

         <TextView

             android:id="@+id/txtBase"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="Salario Base IRPF"
             android:textColor="@color/black"
             android:layout_weight="1"/>

         <TextView

             android:id="@+id/txtFDepositado"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="FGTS Depositado"
             android:textColor="@color/black"
             android:layout_weight="3"/>

         <TextView

             android:id="@+id/edtSalarioL"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:text="Salario Líquido"
             android:textColor="@color/black"
             android:layout_weight="1"/>



     </LinearLayout>




</LinearLayout>


