<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.anmoraes.calculador_salarial_br">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activities.EditarSimulacao"
            android:exported="false" />
        <activity
            android:name=".activities.ListarSimulacao"
            android:exported="false" />
        <activity
            android:name=".activities.SalvarSimulacao"
            android:exported="false" />
        <activity
            android:name=".activities.Termos"
            android:exported="true" />
        <activity
            android:name=".activities.Politica"
            android:exported="true" />
        <activity
            android:name=".activities.Resultado"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>